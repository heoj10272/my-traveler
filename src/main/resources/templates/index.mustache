{{>layout/header}}
    <div class="row">
        <div class="col-lg-11">
            <h1>My Traveler</h1><br>
            <h2>Search and Find Experience</h2>
        </div>
        <div class="col-lg-1">
            {{#loginUserName}}
                Welcome! <span id="user">{{loginUserName}}</span>
                <a href="/posts/save" role="button"
                   class="btn btn-outline-secondary">Write</a>
                <a href="/logout" class="btn btn-outline-secondary" role="button">Logout</a>
            {{/loginUserName}}

            {{^loginUserName}}
                        <a href="/loginForm" class="btn btn-outline-secondary" role="button">Login</a>
            {{/loginUserName}}
        </div>
    </div>

    <br>
    <br>
    <!-- 목록 출력 영역 -->
<table>
    <thead class="thead-strong">
    <tr height="50">
        <th width="200">게시글번호</th>
        <th width="150">제목</th>
        <th width="150">작성자</th>
        <th width="250">최종수정일</th>
    </tr>
    </thead>
</table>
<br>
<table>
    <tbody id="tbody">
    {{#posts}}
        <tr height="50">
            <td width="200">{{id}}</td>
            <td width="150"><a href="/posts/retrieve/{{id}}">{{title}}</a></td>
            <td width="150"> {{author}}</td>
            <td width="250">{{modifiedDate}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>


{{>layout/footer}}
